{
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "eqeqeq": "error"
  },
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["test/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}